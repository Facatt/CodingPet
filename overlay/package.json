{
  "name": "codingpet-overlay",
  "version": "0.1.0",
  "description": "CodingPet \u684c\u9762\u5ba0\u7269\u60ac\u6d6e\u7a97",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "dev": "tsc --watch",
    "copy-assets": "node -e \"const fs=require('fs');const p=require('path');function c(s,d){if(!fs.existsSync(d))fs.mkdirSync(d,{recursive:true});fs.readdirSync(s).forEach(f=>{const sp=p.join(s,f),dp=p.join(d,f);fs.statSync(sp).isDirectory()?c(sp,dp):fs.copyFileSync(sp,dp)});}if(fs.existsSync('renderer'))c('renderer','dist/renderer');\"",
    "start": "electron dist/main.js",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.codingpet.overlay",
    "productName": "CodingPet Overlay",
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": "dir"
    },
    "mac": {
      "target": "dir"
    },
    "linux": {
      "target": "dir"
    }
  }
}
